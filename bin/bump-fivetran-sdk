# bump-fivetran-sdk â€” Update Fivetran SDK proto files from upstream.

set -euo pipefail

cd "$(dirname "$0")/.."

UPSTREAM_REPO="https://github.com/fivetran/fivetran_sdk.git"
PROTO_DIR="src/fivetran-destination/proto"
PROTO_FILES=("common.proto" "destination_sdk.proto")

TMPDIR=$(mktemp -d)
trap 'rm -rf "$TMPDIR"' EXIT

git clone --depth 1 "$UPSTREAM_REPO" "$TMPDIR/fivetran_sdk" 2>&1 | tail -1
for proto in "${PROTO_FILES[@]}"; do
    cp "$TMPDIR/fivetran_sdk/$proto" "$PROTO_DIR/$proto"
done
sed -i "s/commit: \`[0-9a-f]\+\`/commit: \`$(git -C "$TMPDIR/fivetran_sdk" rev-parse HEAD)\`/" "$PROTO_DIR/README.md"
